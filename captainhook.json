{
	"config": {
		"bootstrap": ".Build/vendor/autoload.php"
	},
	"commit-msg": {
		"enabled": true,
		"actions": []
	},
	"pre-push": {
		"enabled": false,
		"actions": []
	},
	"pre-commit": {
		"enabled": true,
		"actions": [
			{
				"action": ".Build/bin/ec -e .Build -e Tests/Acceptance/Support/_generated/AcceptanceTesterActions.php",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
						"args": [
							[]
						]
					}
				]
			},
			{
				"action": "composer lint:php -- --dry-run",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								".php-cs-fixer.php"
							]
						]
					}
				]
			},
			{
				"action": "composer lint:typoscript -- --fail-on-warnings",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.typoscript",
								"*.tsconfig"
							]
						]
					}
				]
			},
			{
				"action": "composer sca:php -- --memory-limit=2G",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								"phpstan.neon"
							]
						]
					}
				]
			},
			{
				"action": "composer lint:composer -- --dry-run",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"composer.json"
							]
						]
					}
				]
			},
			{
				"action": "ddev composer test",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								"phpunit.coverage.xml",
								"phpunit.xml"
							]
						]
					}
				]
			}
		]
	},
	"prepare-commit-msg": {
		"enabled": false,
		"actions": []
	},
	"post-commit": {
		"enabled": false,
		"actions": []
	},
	"post-merge": {
		"enabled": false,
		"actions": []
	},
	"post-checkout": {
		"enabled": false,
		"actions": []
	},
	"post-rewrite": {
		"enabled": false,
		"actions": []
	},
	"post-change": {
		"enabled": false,
		"actions": []
	}
}
